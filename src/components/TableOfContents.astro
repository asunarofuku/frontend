---
export interface TocItem {
    title: string;
    link: string;
}

interface Props {
    items: TocItem[];
}

// Propsを受け取る
const { items } = Astro.props;
---

<div
    class="grid md:grid-cols-4 sm:grid-cols-3 grid-cols-2 justify-center gap-4"
>
    {
        items.map((item) => (
            <a href={item.link}>
                <div class="text-center p-4 text-lg font-bold border-b-4 border-b-[var(--secondary-color)]">
                    {item.title}
                </div>
            </a>
        ))
    }
</div>
