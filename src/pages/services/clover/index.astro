import CloverLayout from "../../../layouts/services/CloverLayout.astro";

const crumbs = [
    {
        text: "ホーム",
        href: "/",
    },
    {
        text: "ピアセンタークローバー",
    },
];
const activities = [
    {
        date: "",
        title: "クローバー便り",
        imagePath: "/icons/dir.svg",
        url: "/services/clover/clover_dayori",
    },
];

const informations = [
    {
        date: "",
        title: "運用規程（就労継続支援（Ｂ型））",
        imagePath: "/icons/pdf.svg",
        url: "/asunaro/nippon-foundation",
    },
    {
        date: "",
        title: "パンフレット",
        imagePath: "/icons/pdf.svg",
        url: "public/services/clover/clover2024.pdf",
    },
];

